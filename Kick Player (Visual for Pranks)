-- FAKE TOTAL KICK - MURILEX EDITION üòéüî•
-- Coloque no StarterPlayerScripts

local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer

-- UI Function
local function ShowBar(text)
    local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
    gui.ResetOnSpawn = false

    local frame = Instance.new("Frame", gui)
    frame.AnchorPoint = Vector2.new(1, 1)
    frame.Position = UDim2.new(1, -20, 1, -20)
    frame.Size = UDim2.new(0, 180, 0, 40)
    frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    frame.BackgroundTransparency = 1
    frame.BorderSizePixel = 0
    frame.ClipsDescendants = true
    frame.ZIndex = 10
    frame.Name = "Bar"

    local corner = Instance.new("UICorner", frame)
    corner.CornerRadius = UDim.new(0, 10)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextScaled = true
    label.Font = Enum.Font.GothamMedium
    label.ZIndex = 11

    -- Fade in
    for i = 1, 10 do
        frame.BackgroundTransparency = 1 - (i * 0.1)
        task.wait(0.05)
    end

    task.wait(3)

    -- Fade out
    for i = 1, 10 do
        frame.BackgroundTransparency = (i * 0.1)
        task.wait(0.05)
    end

    gui:Destroy()
end

-- Mostrar "Loaded!"
task.spawn(function()
    ShowBar("Loaded!")
end)


-- Fake Kick TOTAL
local function FakeKick(targetName)
    local target = nil
    for _, plr in pairs(Players:GetPlayers()) do
        if plr.Name:lower():sub(1, #targetName) == targetName:lower() then
            target = plr
            break
        end
    end

    if not target then
        ShowBar("Player not found!")
        return
    end

    -- UI de Kicked!
    task.spawn(function()
        ShowBar("Kicked!")
    end)

    -- Se o player √© voc√™ mesmo:
    if target == player then
        -- Sumir PlayerList
        StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.PlayerList, false)

        -- Sumir Chat
        pcall(function()
            StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.Chat, false)
        end)

        -- Sumir personagem
        local char = player.Character or player.CharacterAdded:Wait()
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Transparency = 1
                if part:FindFirstChild("face") then
                    part.face:Destroy()
                end
            elseif part:IsA("Decal") then
                part.Transparency = 1
            end
        end

        -- Sumir nome da cabe√ßa
        for _, tag in pairs(char:GetDescendants()) do
            if tag:IsA("BillboardGui") then
                tag.Enabled = false
            end
        end

        -- Desativar controles para parecer ‚Äúkickado‚Äù
        local Controls = require(player.PlayerScripts:WaitForChild("PlayerModule")):GetControls()
        Controls:Disable()

        -- Tela preta opcional (estilo ban)
        local black = Instance.new("ScreenGui", player.PlayerGui)
        black.Name = "KickEffect"
        local frame = Instance.new("Frame", black)
        frame.Size = UDim2.new(1, 0, 1, 0)
        frame.BackgroundColor3 = Color3.new(0, 0, 0)
        frame.BackgroundTransparency = 1

        for i = 1, 20 do
            frame.BackgroundTransparency = 1 - (i * 0.05)
            task.wait(0.05)
        end
    end
end


-- Detectar comando ;kick nome
player.Chatted:Connect(function(msg)
    if msg:sub(1, 6):lower() == ";kick " then
        local name = msg:sub(7)
        FakeKick(name)
    end
end)
